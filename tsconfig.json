{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "typeRoots": ["src/@types/custom.d.ts"],
  "exclude": ["node_modules", "build"],
  "ts-node": {
    "swc": true,
    "transpileOnly": true
  }
}
